generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  tweetId   String   @unique @map("tweet_id")
  tweetUrl  String   @map("tweet_url")
  mediaUrls String
  hashtags  String
  mentions  String
  links     String
  postedAt  DateTime @default(now()) @map("posted_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([tweetId])
  @@index([createdAt])
  @@map("posts")
}

model AppState {
  key   String @id
  value String

  @@map("app_state")
}

model TwitterUser {
  username String   @id
  userId   String   @map("user_id")
  cachedAt DateTime @default(now()) @map("cached_at")

  @@map("twitter_users")
}

model RateLimit {
  endpoint  String   @id
  resetAt   Int      @map("reset_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  @@map("rate_limits")
}
